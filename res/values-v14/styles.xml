<?xml version="1.0" encoding="utf-8"?>

<resources>

     <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>



    <style name="Theme.Jcertifstyle" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_jcertifstyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Jcertifstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jcertifstyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Jcertifstyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Jcertifstyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Jcertifstyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_jcertifstyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_jcertifstyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Jcertifstyle</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Jcertifstyle.Widget</item>

    </style>

    <style name="ActionBar.Solid.Jcertifstyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_jcertifstyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_jcertifstyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_jcertifstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jcertifstyle</item>
    </style>

    <style name="ActionBar.Transparent.Jcertifstyle" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_jcertifstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jcertifstyle</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Jcertifstyle.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Jcertifstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jcertifstyle</item>
    </style>

</resources>